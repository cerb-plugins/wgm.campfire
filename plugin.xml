<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www.devblocks.com/schema/plugin.xsd">
	<id>wgm.campfire</id>
	<name>[WGM] 37Signals Campfire Integration</name>
	<description>This plugin provides integration with 37Signals Campfire for notification functionality.</description>
	<author>WebGroup Media, LLC.</author>
	<version>1.0.1</version>
	<link>https://github.com/cerb5-plugins/wgm.campfire</link>
	<image>plugin.png</image>
 
	<!-- Requirements -->

	<requires>
		<app_version min="5.6" max="5.7.99" />
		<php_extension name="curl" />
	</requires>
 
	<!-- Plugin Dependencies -->
	
	<dependencies>
		<require plugin_id="cerberusweb.core" version="5.6" />
	</dependencies>

	<!-- Exported Classes -->
	
	<class_loader>
		<file path="api/App.php">
			<class name="WgmCampfire_API" />
		</file>
	</class_loader>

	<!-- Extensions -->
 
	<extensions>
		<!-- Plugin Setup -->
		
		<extension point="cerberusweb.plugin.setup">
			<id>wgmcampfire.setup</id>
			<name>Setup</name>
			<class>
				<file>api/App.php</file>
				<name>WgmCampfire_Setup</name>
			</class>
			<params>
				<param key="tab_label" value="wgm.campfire.common" />
			</params>
		</extension>

		<!-- Event Actions -->
		
		<extension point="devblocks.event.action">
			<id>wgmcampfire.event.action.post</id>
			<name>Speak text in Campfire</name>
			<class>
				<file>api/App.php</file>
				<name>WgmCampfire_EventActionPost</name>
			</class>
			<params>
				<param key="label" value="Speak text in Campfire" />
			</params>
		</extension>
		
    </extensions> 
</plugin>
